<div
  class='actor-selection_actor {{addClass}} active'
  data-section='{{id}}'
  draggable='true'
>
  <div
    class='actor-selection_actor-poster {{addClassPoster}}'
    style='background-image: url("{{poster}}")'
  >
    <div class='actor-selection_actor-poster'>
      <div class='actor-selection_actor_header'>
        {{#if alreadyFavorite}}
          <img class='image-cancel' src='/icons/cancel.webp' alt=""/>
          <img class='image-watchlist noactive' src='/icons/bookmark2.svg' alt=""/>
        {{else if adminPanel}}{{else}}
          <img
             alt=""
            class='image-watchlist red-watchlist noactive'
            src='/icons/bookmark1.svg'
          />
          <img
            alt=""
            class='image-watchlist orange-watchlist active'
            src='/icons/bookmark2.svg'
          />
        {{/if}}
      </div>
    </div>
  </div>
  <div class='actor-selection_actor-information'>
    <div class='actor-selection_actor_name'>{{title}}</div>
  </div>
</div>
