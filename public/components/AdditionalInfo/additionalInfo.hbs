<div class='additional-info'>
  <div class='additional-info__headers'>
    {{#each headersItems}}
      <span
        class='additional-info__headers__items table__header'
      >{{this}}</span>
    {{/each}}
  </div>
  <div class='additional-info__content table__row__text'>
    {{!-- {{infoText}} --}}
    {{#each rewiew}}
    <div class='rewiew'>
      <div class='rewiew__header'>
        <img class='rewiew__header__img' src='../../icons/avatar.png' />
        <h1 class='rewiew__header__user-name table__header'>{{name}}</h1>
        <span
          class='rewiew__header__rewiew-data table__row__text'
        >{{date}}</span>
      </div>
      <div class='rewiew__body'>
        <span class='rewiew__body__text table__row__text'>{{text}}</span>
      </div>
    </div>
    {{#/each}}
  </div>
</div>
