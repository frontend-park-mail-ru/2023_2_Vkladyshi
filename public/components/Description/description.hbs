{{! { 
  isHeader: bool, 
  header: str, 
  subHeader: str, 
  row:[
    row1:{
      rowName: str,
      rowText: str,
    },
    row2:{
      rowName: str,
      rowText: str,
    },
  ], 
} }}
<div class='description'>
  <img
    class='description__img'
    src='../../icons/star.png'
    alt='description__img'
  />
  <div class='description__text'>
    {{#if isHeader}}
      <div class='description__text__header'>
        <p class='description__text__header__header-string'>{{header}}</p>
        <p class='description__text__header__subheader-string'>
          {{subHeader}}
        </p>
      </div>
    {{/if}}

    {{#each row}}
      <div class='description__text__table'>
        <div class='description__table table__header'>Основная информация</div>

        <div class='description__table table__row'>
          <!-- <img
          class="description__table img__row__table"
          src="../../icons/like.svg"
          alt="img__row__table"
        /> -->
          <span
            class='description__table table__row__title'
          >{{this.rowName}}</span>
          <span
            class='description__table table__row__text'
          >{{this.rowText}}</span>
        </div>
      </div>
    {{/each}}
  </div>
</div>