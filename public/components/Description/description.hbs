<div class='description'>
  <img class='description__img' src='{{poster}}' alt='description__img' />
  <div class='description__text'>
    {{#if isHeader}}
      <div class='description__text__header'>
        <p class='description__text__header__header-string'>{{header}}</p>
      </div>
    {{/if}}

    {{#if film}}
      <div class='description__text__table'>
        <div class='description__table table__header'>{{title}}</div>
        <div class='description__table table__row'>
          <span class='description__table__row table__row__title'>Жанры</span>
          {{#each body.genre}}
            <span
              class='description__table__text table__row__text table__genre__text'
              data-section='{{id}}'
            >{{title}}</span>
          {{/each}}
        </div>
        <div class='description__table table__row'>
          <span class='description__table__row table__row__title'>Страна</span>
          <span
            class='description__table__text table__row__text'
          >{{country}}</span>
        </div>
        <div class='description__table table__row'>
          <span class='description__table__row table__row__title'>Год</span>
          <span
            class='description__table__text table__row__text'
          >{{date}}</span>
        </div>
        <div class='description__table table__row'>
          <span class='description__table__row table__row__title'>Актеры</span>
          {{#each actors}}
            <span
              class='description__table__text table__row__text table__actor__text'
              data-section='{{id_actor}}'
            >{{actor_name}}</span>
          {{/each}}
        </div>
      </div>
    {{/if}}
    {{#if actor}}
      <div class='description__text__table'>
        <div class='description__table table__header'>{{name}}</div>
        <div class='description__table table__row'>
          <span class='description__table__row table__row__title'>Карьера</span>
          <span
            class='description__table__text table__row__text'
          >{{career}}</span>
        </div>
        <div class='description__table table__row'>
          <span class='description__table__row table__row__title'>Страна</span>
          <span
            class='description__table__text table__row__text'
          >{{country}}</span>
        </div>
        <div class='description__table table__row'>
          <span class='description__table__row table__row__title'>Год рождения</span>
          <span
            class='description__table__text table__row__text'
          >{{date}}</span>
        </div>
        <div class='description__table table__row'>
          <span class='description__table__row table__row__title'>Жанры</span>
          {{#each body.genres}}
            <span
              class='description__table__text table__row__text'
            >{{this}}</span>
          {{/each}}
        </div>
      </div>
    {{/if}}
    {{#if userSettings}}
      <div class='check__all_comments'>Просмотр своих отзывов</div>
    {{/if}}
  </div>
</div>