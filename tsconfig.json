{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["public/*"],
      "@utils/*":  ["public/utils/*"],
      "@components/*":  ["public/components/*"],
      "@views/*":  ["public/views/*"],
      "@router/*":  ["public/router/*"],

    },
    "outDir": "cache/",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["public", "public/components/**/*.hbs", "public/components/**/*.precompiled.js"],
  "exclude": ["node_modules", "public/components/**/*.hbs", "public/components/**/*.precompiled.js"]
}
